<%- include('../partials/header.ejs') %>
<div class="row">
    <div class="col">
        <form action="/filter_monthly_summary" method="POST">
            <div class="form-group">
              <label for="month">Month </label>
              <input type="month" name = "month" class="form-control" id="month" placeholder="">
            </div>
            <input type="submit" value="Submit Month!">
            
          </form>

          <% if (month && year) { %> 
            <div class="col">
              <% if (data.monthly_summary.length === 0) {%>
                <p class="alert alert-info">No data for this Month  exists</p>
              <% }  else{ %>  
            
              <h1>Monthly Report For month <%= month %> of year <%= year %>  </h1>
              <ul class="list-group">
                  <% data.monthly_summary.forEach((m_summary) => { %>
                      <li class="list-group-item"><%= m_summary.activity_type %>: <%= (m_summary.round)%></li>
                  <% }); %>
              </ul>
          </div>
              <% } %> 
          
        <% } else {%>
          <p class="alert alert-info">Please select month</p>
      <% } %> 
    </div>

</div>


<%- include('../partials/footer.ejs') %>